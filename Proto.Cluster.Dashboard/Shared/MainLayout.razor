@inherits LayoutComponentBase

<PageTitle>Proto.Cluster.Dashboard</PageTitle>
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => ButtonClicked())" />
        My Application
    </MudAppBar>
    <MudDrawer @bind-Open="@Opened">
         <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code
{


    bool Opened = true;

    void ButtonClicked()
    {
        Opened = !Opened;
    }

}