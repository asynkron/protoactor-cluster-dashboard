@inherits LayoutComponentBase

<PageTitle>Proto.Cluster.Dashboard</PageTitle>
<MatThemeProvider Theme="@theme1">
    <MatAppBarContainer>
        <MatAppBar Fixed="true">
            <MatAppBarRow>
                <MatAppBarSection>
                    <MatIconButton Icon="menu" OnClick="@(_ => ButtonClicked())"></MatIconButton>
                    <MatAppBarTitle>MatBlazor - Material Design components for Blazor</MatAppBarTitle>
                </MatAppBarSection>
                <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                    <MatIconButton Icon="favorite"></MatIconButton>
                </MatAppBarSection>
            </MatAppBarRow>
        </MatAppBar>

        <MatAppBarContent>
            <MatDrawerContainer Style="width: 100vw; height: 100vh;">
                <MatDrawer @bind-Opened="@Opened">
                    <NavMenu/>
                </MatDrawer>
                <MatDrawerContent>
                    @Body
                </MatDrawerContent>
            </MatDrawerContainer>
        </MatAppBarContent>
    </MatAppBarContainer>
</MatThemeProvider>


@code
{
    private readonly MatTheme theme1 = new()
    {
        Primary = MatThemeColors.Blue._800.Value, 
        //Secondary = MatThemeColors.BlueGrey._500.Value
    };

    bool Opened = true;

    void ButtonClicked()
    {
        Opened = !Opened;
    }

}