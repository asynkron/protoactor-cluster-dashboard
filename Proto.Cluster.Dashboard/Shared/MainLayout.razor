@inherits LayoutComponentBase

<PageTitle>Proto.Cluster.Dashboard</PageTitle>
<MudThemeProvider IsDarkMode="true"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => ToggleDrawer())" />
        My Application
    </MudAppBar>
    <MudDrawer @bind-Open="@_open" ClipMode="DrawerClipMode.Always" Elevation="2">
         <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer >
        @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{

    bool _open = true;

    void ToggleDrawer()
    {
        _open = !_open;
    }

}