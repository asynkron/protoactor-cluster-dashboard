<MatButton @onclick="Toggle"
           Dense Raised
           Style="min-width: 16px !important; max-width:16px !important;">
        <div style="font-size: 10px; min-width: 20px;min-height: 20px;display: inline-block; padding-left: 2px;padding-top: 4px;">
            @if (Expanded)
            {
                <span class="oi oi-caret-bottom" aria-hidden="true"></span>
            }
            else
            {
                <span class="oi oi-caret-right" aria-hidden="true"></span>
            }
        </div>
</MatButton>
<span style="padding-left: 16px">
    <b>
        @Text
    </b>
</span>

@if (Expanded)
{
    <div style="padding-top: 8px">
        @ChildContent
    </div>
}

@code {

    [Parameter]
    public bool Expanded { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Text { get; set; }

    private void Toggle()
    {
        Expanded = !Expanded;
    }

}