<MudCard Outlined="true" Elevation="2">
    <MudCardHeader Class="pa-2">
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Success" Variant="Variant.Filled">
                <MudIcon Icon="@Icons.Material.Filled.Hive"/>
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h5" Color="Color.Info">Member @Member.Id</MudText>
            <MudText Typo="Typo.body2"><b>Address:</b> @Member.Address</MudText>
        </CardHeaderContent>
        @* <CardHeaderActions> *@
        @*     <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default"/> *@
        @* </CardHeaderActions> *@
    </MudCardHeader>
    <MudDivider DividerType="DividerType.Middle"/>
    <MudCardActions>
        <MudChipSet>
            @foreach (var kind in Member.Kinds)
            {
                <MudChip Size="Size.Small" Variant="Variant.Outlined" Color="Color.Secondary">@kind</MudChip>
            }
        </MudChipSet>
    </MudCardActions>
</MudCard>
@code {
    [Parameter]
    public Member Member { get; set; }
}